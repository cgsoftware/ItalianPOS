<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <menuitem action="codici_agg" id="menu_codici_tree" parent="menu_point_of_sale_product" name="Codici Aggiuntivi"/>
    
    <record model="ir.ui.view" id="Codici">
            <field name="name">product.codici</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
                <field name="arch" type="xml">
	                <notebook position="inside">        
				  <page string="Codici Aggiuntivi">
					<separator colspan="4" string="Codici Aggiuntivi"/>
					<field name="codici_agg" />
					<newline/>
				  </page>
			</notebook>

		  </field>
        </record>
        
    
        
      <record model="ir.ui.view" id="codici_agg">
	  <field name="name">codici.tree</field>
	  <field name="model">product.codici</field>
	  <field name="type">tree</field>
	  <field name="arch" type="xml">
	    <tree string="Codici Aggintivi dei prodotti">
	    	<field name="name"/>
			<field name="ean"/>
		</tree>
	  </field>
	</record> 
                
</data>
</openerp>