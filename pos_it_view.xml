<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
   
    
    <record model="ir.ui.view" id="Codici">
            <field name="name">product.codici</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
                <field name="arch" type="xml">
	                <notebook position="inside">        
				  <page string="Codici Aggiuntivi">
					<separator colspan="4" string="Codici Aggiuntivi"/>
					<field name="codici_agg" />
					<field name="stampa_etich"/>
					<newline/>
				  </page>
			</notebook>

		  </field>
        </record>
        
    
        
      <record model="ir.ui.view" id="codici_agg_view">
	  <field name="name">codici.tree</field>
	  <field name="model">product.codici</field>
	  <field name="type">tree</field>
	  <field name="arch" type="xml">
	    <tree string="Codici Aggintivi dei prodotti">
	    	<field name="name"/>
			<field name="ean"/>
			
		</tree>
	  </field>
	</record> 
	
	<record id="codici_agg" model="ir.actions.act_window">
            <field name="name">Codici Aggiuntivi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.codici</field>
		<field name="view_mode">tree</field>
     </record>
	
   <menuitem action="codici_agg" id="menu_codici_tree" parent="point_of_sale.menu_point_of_sale_product" sequence="3" name="Codici Aggiuntivi"/>
	          
</data>
</openerp>